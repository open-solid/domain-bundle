{
    "name": "open-solid/domain-event-bundle",
    "description": "Symfony bundle for domain events",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Yonel Ceruto",
            "email": "open@yceruto.dev"
        }
    ],
    "require": {
        "php": ">=8.2",
        "open-solid/domain-event": "^1.0",
        "symfony/framework-bundle": "^6.4|^7.0"
    },
    "require-dev": {
        "symfony/messenger": "^7.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OpenSolid\\DomainEventBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenSolid\\DomainEventBundle\\Tests\\": "tests/"
        }
    }
}
