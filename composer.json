{
    "name": "open-solid/domain-bundle",
    "description": "Symfony bundle for domain building blocks",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Yonel Ceruto",
            "email": "open@yceruto.dev"
        }
    ],
    "require": {
        "php": ">=8.2",
        "open-solid/domain": "^1.0",
        "symfony/framework-bundle": "^6.4|^7.1"
    },
    "require-dev": {
        "symfony/messenger": "^7.1",
        "friendsofphp/php-cs-fixer": "^3.54",
        "yceruto/decorator": "^1.2"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OpenSolid\\DomainBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenSolid\\DomainBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    }
}
